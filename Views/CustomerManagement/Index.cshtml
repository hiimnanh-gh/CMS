@model List<CMS.Models.User>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<h2>Danh sách khách hàng</h2>

<a href="@Url.Action("CreateCustomer", "CustomerManagement")" class="btn btn-success mb-3">Thêm khách hàng</a>

<form method="get" class="mb-3">
    <input type="text" name="search" class="form-control d-inline w-25" placeholder="Tìm kiếm..." value="@ViewData["SearchQuery"]" />
    <button type="submit" class="btn btn-primary">Tìm</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.UserId</td>
                <td>@customer.UserName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNum</td>
                <td>
                    <a href="@Url.Action("EditCustomer", "CustomerManagement", new { id = customer.UserId })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "CustomerManagement", new { id = customer.UserId })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

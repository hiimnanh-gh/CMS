@model CMS.Models.User

<h2>Chỉnh sửa khách hàng</h2>

<form asp-action="EditCustomer" asp-route-id="@Model.UserId" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="UserName">Tên khách hàng</label>
        <input asp-for="UserName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNum">Số điện thoại</label>
        <input asp-for="PhoneNum" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RoleId">Chức vụ</label>
        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

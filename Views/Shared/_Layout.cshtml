@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
    var roleId = HttpContextAccessor.HttpContext?.Session.GetInt32("RoleId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @* ✅ Hiển thị menu theo Role *@
                        @if (roleId == 1) // Admin
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="MovieManagement" asp-action="Index">Quản lý phim</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="StaffManagement" asp-action="Index">Quản lý nhân viên</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="BookingReport" asp-action="Index">Báo cáo đặt vé</a>
                            </li>
                        }
                        else if (roleId == 2) // Staff
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="CustomerManagement" asp-action="Index">Quản lý khách hàng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="Manage">Quản lý đơn đặt vé</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="Manage">Quản lý phòng chiếu phim</a>
                            </li>
                        }
                        else if (roleId == 3) // Customer
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Movies" asp-action="Index">Phim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="MyOrders">Đơn hàng của tôi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Index">Tài Khoản</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(userName))
                        {
                            <li class="nav-item">
                                <span class="nav-link">Xin chào, <strong>@userName</strong>!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-danger text-white" asp-controller="Login" asp-action="Logout">Đăng Xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white" asp-controller="Login" asp-action="Login">Đăng Nhập / Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center fixed-bottom bg-light py-3"> 
        <div class="container"> 
        &copy; 2025 - CMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model IEnumerable<CMS.Models.BookingIndexViewModel>

@{
    ViewData["Title"] = "Quản lý đơn đặt vé";
}

<h2>Quản lý đơn đặt vé</h2>

<a href="/BookingManagement/Create" class="btn btn-success mb-3">Thêm mới đơn đặt vé</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Rạp</th>
            <th>Phòng</th>
            <th>Ngày chiếu</th>
            <th>Giờ chiếu</th>
            <th>Ghế</th>
            <th>Tổng tiền</th>
            <th>Ngày đặt</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingId</td>
                <td>@item.CustomerName</td>
                <td>@item.TheatreLocation</td>
                <td>@item.TheatreNum</td>
                <td>@item.ShowDate.ToString("dd/MM/yyyy")</td> <!-- ✅ DateTime -->
                <td>@item.ShowingDateTime.ToString(@"hh\:mm")</td>     <!-- ✅ TimeSpan -->
                <td>@item.Seats</td>
                <td>@item.TotalFee.ToString("N0") VNĐ</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="/BookingManagement/Details/@item.BookingId" class="btn btn-info btn-sm">Xem</a>
                    <a href="/BookingManagement/Edit/@item.BookingId" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="/BookingManagement/Delete/@item.BookingId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

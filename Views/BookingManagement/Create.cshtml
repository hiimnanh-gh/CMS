@model CMS.Models.Booking

@{
    ViewData["Title"] = "Thêm mới đơn đặt vé";
    var selectedSeats = ViewBag.SelectedSeats as List<int> ?? new List<int>();
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Khách hàng</label>
        <select name="UserId" class="form-control">
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.UserId">@user.FullName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Suất chiếu</label>
        <select name="ShowingTimeId" class="form-control">
            @foreach (var st in ViewBag.ShowingTimes)
            {
                <option value="@st.ShowingTimeId">
                    @st.Theatre.Location - Phòng @st.Theatre.TheatreNum - @st.ShowDateTime.ToString("dd/MM/yyyy HH:mm")
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Chọn ghế</label>
        <div class="row">
            @foreach (var seat in ViewBag.Seats)
            {
                <div class="col-md-2">
                    <input type="checkbox" name="selectedSeats" value="@seat.SeatId" /> @seat.SeatRow@seat.SeatNumber
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <label>Tổng tiền</label>
        <input type="number" name="TotalFee" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Thêm mới</button>
    <a href="/BookingManagement/Index" class="btn btn-secondary">Hủy</a>
</form>

@model CMS.Models.Booking

@{
    ViewData["Title"] = "Xóa đơn đặt vé";
}

<h2>Xác nhận xóa đơn đặt vé</h2>
<p>Bạn có chắc chắn muốn xóa đơn đặt vé mã <strong>@Model.BookingId</strong> không?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.BookingId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="/BookingManagement/Index" class="btn btn-secondary">Hủy</a>
</form>


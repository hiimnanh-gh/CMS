@model CMS.Models.User

@{
    ViewData["Title"] = "Tài khoản của tôi";
}

<h2>Thông tin tài khoản</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-controller="Account" asp-action="Update" method="post">
    <div class="mb-3">
        <label>Họ và tên:</label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email:</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Số điện thoại:</label>
        <input asp-for="PhoneNum" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@{
    ViewData["Title"] = "Chọn hoặc Thêm Đạo Diễn";
}

<h2>Chọn hoặc Thêm Đạo Diễn</h2>

<form asp-action="SelectDirector" method="post" id="directorForm">
    <div class="form-group">
        <label for="DirectorId" class="text-white">Chọn đạo diễn</label>
        <select name="DirectorId" class="form-control" id="directorSelect">
            <option value="">Chọn đạo diễn</option>
            @foreach (var director in ViewBag.Directors)
            {
                <option value="@director.DirectorId">@director.DirectorName</option>
            }
        </select>
    </div>

    <h4 class="text-center text-white">Hoặc</h4>

    <div class="form-group">
        <label for="DirectorName" class="text-white">Thêm mới đạo diễn</label>
        <input type="text" name="DirectorName" class="form-control" id="newDirectorInput" />
    </div>

    <button type="submit" class="btn btn-primary">Tiếp tục</button>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var directorSelect = document.getElementById("directorSelect");
        var newDirectorInput = document.getElementById("newDirectorInput");

        function toggleInputs() {
            if (directorSelect.value) {
                newDirectorInput.disabled = true;
                newDirectorInput.value = "";
            } else {
                newDirectorInput.disabled = false;
            }
        }

        directorSelect.addEventListener("change", toggleInputs);
    });
</script>


@model List<CMS.Models.Theatre>
@{
    var movie = ViewBag.Movie as CMS.Models.Movie;
}

<h2>Add Screening Room for Movie: @movie.Title</h2>

<form method="post">
    <input type="hidden" name="movieId" value="@movie.MovieId" />

    <div class="form-group">
        <label>Select Screening Room</label>
        <select name="theatreId" class="form-control">
            @foreach (var theatre in Model)
            {
                <option value="@theatre.TheatreId">Theatre No: @theatre.TheatreNum (Seats: @theatre.AvailableSeats)</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Add Screening Room</button>
    <a asp-action="ManageTheatres" asp-route-movieId="@movie.MovieId" class="btn btn-secondary">Return</a>
</form>

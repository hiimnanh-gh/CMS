@model List<CMS.Models.MovieTheatre>
@{
    var movie = ViewBag.Movie as CMS.Models.Movie;
}

<h2>Theatres Assigned to Movie: @movie.Title</h2>

<a asp-action="AddTheatreToMovie" asp-route-movieId="@movie.MovieId" class="btn btn-success">Add Theatre</a>

<table class="table">
    <thead>
        <tr>
            <th>Theatre Number</th>
            <th>Available Seats</th>
            <th>Manage Showing Dates</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Theatre.TheatreNum</td>
                <td>@item.Theatre.AvailableSeats</td>
                <td>
                    <a asp-action="ManageShowingDates" asp-route-movieId="@movie.MovieId" asp-route-theatreId="@item.TheatreId" class="btn btn-primary">Manage Showing Dates</a>
                </td>
                <td>
                    <a asp-action="RemoveTheatre" asp-route-movieId="@movie.MovieId" asp-route-theatreId="@item.TheatreId" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Nút Back -->
<button class="btn-back" onclick="goBack()">Back</button>

<!-- CSS -->
<style>
    .btn-back {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #3498db; /* Màu xanh dương */
        color: white;
        font-size: 16px;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

        .btn-back:hover {
            background-color: #2980b9; /* Màu xanh đậm hơn khi hover */
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.3);
        }

        .btn-back:active {
            transform: scale(0.95);
            box-shadow: none;
        }

        .btn-back::before {
            content: "⬅ ";
            font-size: 18px;
            margin-right: 8px;
        }
</style>

<!-- JavaScript -->
<script>
    function goBack() {
        if (document.referrer) {
            window.history.back(); // Quay về trang trước
        } else {
            window.location.href = "/Home/Index"; // Nếu không có trang trước thì về trang chủ
        }
    }
</script>


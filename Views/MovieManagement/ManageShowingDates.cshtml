@model List<DateTime?>

<h2>Showing Date List</h2>

<a href="@Url.Action("AddShowingDate", "MovieManagement", new { movieId = ViewBag.MovieId, theatreId = ViewBag.TheatreId })" class="btn btn-primary mb-3">Add Showing Date</a>

<table class="table">
    <thead>
        <tr>
            <th>Showing Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var date in Model)
        {
            <tr>
                <td>@(date.HasValue ? date.Value.ToString("dd/MM/yyyy") : "No showing date available")</td>
                <td>
                    @if (date.HasValue)
                    {
                        <a href="@Url.Action("DeleteShowingDate", "MovieManagement", new { movieId = ViewBag.MovieId, theatreId = ViewBag.TheatreId, showingDate = date.Value.ToString("yyyy-MM-dd") })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this showing date?');">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Nút Back -->
<button class="btn-back" onclick="goBack()">Back</button>

<!-- CSS -->
<style>
    .btn-back {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #3498db; /* Màu xanh dương */
        color: white;
        font-size: 16px;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

        .btn-back:hover {
            background-color: #2980b9; /* Màu xanh đậm hơn khi hover */
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.3);
        }

        .btn-back:active {
            transform: scale(0.95);
            box-shadow: none;
        }

        .btn-back::before {
            content: "⬅ ";
            font-size: 18px;
            margin-right: 8px;
        }
</style>

<!-- JavaScript -->
<script>
    function goBack() {
        if (document.referrer) {
            window.history.back(); // Quay về trang trước
        } else {
            window.location.href = "/Home/Index"; // Nếu không có trang trước thì về trang chủ
        }
    }
</script>

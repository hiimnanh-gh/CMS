@model List<CMS.Models.User>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h2>Danh sách nhân viên</h2>

<a href="@Url.Action("CreateStaff", "StaffManagement")" class="btn btn-success mb-3">Thêm nhân viên</a>

<form method="get" class="mb-3">
    <input type="text" name="search" class="form-control d-inline w-25" placeholder="Tìm kiếm..." value="@ViewData["SearchQuery"]" />
    <button type="submit" class="btn btn-primary">Tìm</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.UserId</td>
                <td>@staff.UserName</td>
                <td>@staff.Email</td>
                <td>@staff.PhoneNum</td>
                <td>
                    <a href="@Url.Action("EditStaff", "StaffManagement", new { id = staff.UserId })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "StaffManagement", new { id = staff.UserId })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
